; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

[*.{php,html,twig}]
indent_style = space
indent_size = 4

# Web Files
[*.{htm,html,js,jsm,ts,tsx,css,sass,scss,less,svg,vue}]
indent_size = 4

# JSON Files
[*.{json,json5,webmanifest}]
indent_size = 4

# Neon Files
[*.{neon}]
indent_size = 4

# YAML Files
[*.{yml,yaml}]
indent_size = 4

# Markdown Files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# XML Configuration Files
[*.{xml,config,props,targets,nuspec,resx,ruleset,vsixmanifest,vsct}]
indent_size = 4

# Batch Files
[*.{cmd,bat}]
end_of_line = crlf

# Makefiles
[Makefile]
indent_style = tab

[COMMIT_EDITMSG]
max_line_length = 0
